{
    "name": "backend",
    "version": "0.1.0",
    "private": true,
    "description": "Simple Fastify backend in TypeScript",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "start": "node dist/server.js",
        "dev": "tsx watch src/server.ts",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev --name init",
        "prisma:push": "prisma db push"
    },
    "dependencies": {
        "@fastify/cors": "^8.5.0",
        "fastify": "^4.28.1",
        "pino-pretty": "^11.2.2",
        "ws": "^8.17.1",
        "@prisma/client": "^5.17.0"
    },
    "devDependencies": {
        "@types/node": "^20.14.10",
        "tsx": "^4.16.2",
        "typescript": "^5.5.4",
        "@types/ws": "^8.5.10",
        "prisma": "^5.17.0"
    },
    "engines": {
        "node": ">=18"
    }
}